{
  "require": {
    "slim/slim": "4.*",
    "slim/psr7": "^1.6",
    "firebase/php-jwt": "^6.9",
    "nyholm/psr7-server": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --no-logging --colors=always --testdox tests"
  }
}
